<% include ../partials/header %>

<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-sm-10">
      <form class="form-horizontal" method="post" action="/events/create">
        <input type="hidden" name="id" value="" />

        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">
            <strong>Name</strong></label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="name" value="">
          </div>
        </div>

        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">
            <strong>Start Date</strong></label>
          <div class="col-sm-10">
            <input type="date" name="start_date" class="form-control" id="start_date" value="">
          </div>
        </div>

        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">
            <strong>End Date</strong></label>
          <div class="col-sm-10">
            <input type="date" name="end_date" class="form-control" id="end_date" value="">
          </div>
        </div>
        
        <div class="form-group">
          <label for="location" class="col-sm-2 control-label">
            <strong>Location</strong></label>
          <div class="col-sm-10">
            <textarea name="location" id="location"  class="form-control" cols="30" rows="2"></textarea>
          </div>
        </div>

        <div class="form-group">
          <label for="desc" class="col-sm-2 control-label">
            <strong>Description</strong></label>
          <div class="col-sm-10">
            <textarea name="desc" id="desc"  class="form-control" cols="30" rows="2"></textarea>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" name="submit" value="Save" class="btn btn-success">
              <a href="/" class="btn btn-danger">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
